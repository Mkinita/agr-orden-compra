model Nuevaorden{
  id Int @id @default(autoincrement())
  fecha DateTime
  cotizacion String
  atencion String
  pago String?
  pedido Json
  pedido01 Json
  estado Boolean  @default(false)
  estado01 Boolean  @default(false)
  planta Boolean  @default(false)
  conforme Boolean  @default(false)
