

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Articulo {
  id Int @id @default(autoincrement())
  nombre String
  valor String
}


model Solicitud {
  id Int @id @default(autoincrement())
  fecha DateTime
  area String
  nombre01 String
  pedido Json
  cotizar Boolean  @default(false)
  compra Boolean  @default(false)
  estado Boolean  @default(false)
  planta Boolean  @default(false)
}



model Proveedores {
  id Int @id @default(autoincrement())
  nombreproveedor String
  rut String
}


model Orden {
  id Int @id @default(autoincrement())
  fecha DateTime
  pedido01 Json
  solicita String
  cotizacion String
  atencion String
  area String
  numerosoli String


  cantidades Float?
  detalles String?
  valores String?

  cantidad01 Float?
  detalle01 String?
  valor01 String?

  cantidad02 Float?
  descripcion02 String?
  valor02 String?

  cantidad03 Float?
  descripcion03 String?
  valor03 String?

  cantidad04 Float?
  descripcion04 String?
  valor04 String?

  cantidad05 Float?
  descripcion05 String?
  valor05 String?

  cantidad06 Float?
  descripcion06 String?
  valor06 String?

  cantidad07 Float?
  descripcion07 String?
  valor07 String?

  cantidad08 Float?
  descripcion08 String?
  valor08 String?

  cantidad09 Float?
  descripcion09 String?
  valor09 String?

  estado Boolean  @default(false)
  planta Boolean  @default(false)
}


model NuevaSolicitud {
  id Int @id @default(autoincrement())
  fecha DateTime
  area String
  nombre01 String

  cantidades String?
  detalles String?
  valores String?

  cantidad01 String?
  detalle01 String?
  valor01 String?

  cantidad02 String?
  descripcion02 String?
  valor02 String?

  cantidad03 String?
  descripcion03 String?
  valor03 String?

  cantidad04 String?
  descripcion04 String?
  valor04 String?

  cotizar Boolean  @default(false)
  compra Boolean  @default(false)
  estado Boolean  @default(false)
  planta Boolean  @default(false)
